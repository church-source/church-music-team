<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd"
    logicalFilePath="./src/main/resources/liquibase/updates/services.xml">

    <changeSet id="20210906-2230" author="rowanpi">
        <createTable tableName="team">
          <column name="id" type="BIGINT(20)" autoIncrement="true">
            <constraints primaryKey="true" />
          </column>
          <column name="created" defaultValueComputed="CURRENT_TIMESTAMP" type="TIMESTAMP"/>
          <column name="modified" defaultValueComputed="CURRENT_TIMESTAMP" type="TIMESTAMP"/>
          <column name="deleted" type="TINYINT(1)" defaultValue="0">
                <constraints nullable="0" />
          </column>
          <column name="name" type="varchar(50)">
            <constraints nullable="false" />
          </column>
          <column name="resigned" type="TINYINT(1)" defaultValue="0">
            <constraints nullable="0" />
          </column>
        </createTable>
    </changeSet>


    <changeSet id="20210906-2235" author="rowanpi">
        <sql dbms="mysql">
            ALTER TABLE team CHANGE modified modified TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP;
        </sql>
    </changeSet>

    <changeSet id="20210906-2341" author="rowanpi">
        <createTable tableName="role">
            <column name="id" type="BIGINT(20)" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="created" defaultValueComputed="CURRENT_TIMESTAMP" type="TIMESTAMP"/>
            <column name="modified" defaultValueComputed="CURRENT_TIMESTAMP" type="TIMESTAMP"/>
            <column name="deleted" type="TINYINT(1)" defaultValue="0">
                <constraints nullable="0" />
            </column>
            <column name="rolename" type="varchar(50)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20210906-2347" author="rowanpi">
        <createTable tableName="person_role">
            <column name="person" type="BIGINT(20)">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_PersonForRole"
                             references="team(id)"  deleteCascade="true"/>
            </column>
            <column name="role" type="BIGINT(20)">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_RoleForPerson"
                             references="role(id)"  deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
